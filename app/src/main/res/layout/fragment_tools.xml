<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/top_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/urbanist_semibold"
        android:text="Mother Tools"
        android:textColor="@color/primary"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/settings_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<ScrollView
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView7">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_marginBottom="@dimen/_80sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/scan_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/babyscancard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Match Your\nScans"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/blood_pressure_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/bp_card">

                <TextView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Blood\nPressure"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/breathing_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_87sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/breathing_card">

                <TextView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Breathing\nExercise"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/ovulation_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/card6">

                <TextView
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Ovulation"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/weight_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/weight_card">

                <TextView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Weight\nTracker"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/_120sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/report_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/reportscard">

                <TextView
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Reports"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/kick_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/kick_counter">

                <TextView
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Kick Counter"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/baby_size_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/babysizecard">

                <TextView
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Baby Size"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/medi_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_87sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/medi_card">

                <TextView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Medicine\nReminder"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_7sdp"
                android:id="@+id/baby_names_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/card7">

                <TextView
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Baby\nNames"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>