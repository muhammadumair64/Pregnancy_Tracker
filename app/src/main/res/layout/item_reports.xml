<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/exercise_bg"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_height="@dimen/_75sdp">

    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/white"
        android:id="@+id/reportImageCard"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/reportImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/scan4"
      />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu"
        app:layout_constraintStart_toEndOf="@+id/reportImageCard"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/timeSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:singleLine="true"
            android:text="Nov  7, 2024"
            android:textColor="#BEBEBE"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/exercise_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/urbanist_bold"
            android:singleLine="true"
            android:text="Week 3 Report"
            android:textColor="#575757"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/exercise_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:singleLine="true"
            android:text="Description Text... "
            android:textColor="#BEBEBE"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/exercise_ic"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:singleLine="true"
        android:text="3rd Week"
        android:textColor="@color/primary"
        android:layout_marginEnd="@dimen/_19sdp"
        android:fontFamily="@font/urbanist_medium"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/menu_dots"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>