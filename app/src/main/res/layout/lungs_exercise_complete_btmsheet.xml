<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="hardcodedText">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_2sdp"
        android:backgroundTint="@color/light_gray"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textView82"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_45sdp"
            android:text="How was the lungs exercise for you?"
            android:fontFamily="@font/urbanist_semibold"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_17sdp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView82">

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/breathing_1_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_border_color_light"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:text="Refreshing"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/breathing_2_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/green_color_round_corner"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:text="Challenging"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/breathing_3_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_border_color_light"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:text="Energized"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

            <TextView
                android:id="@+id/breathing_4_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_border_color_light"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:text="Difficult"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/breathing_5_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_border_color_light"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:text="Intense"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/breathing_6_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_border_color_light"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:text="6 min Breathing"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middle_lay">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/remind_later_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_7sdp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="@dimen/_30sdp"
            app:strokeWidth="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Remind Later"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/retry_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/background_color"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_weight="1"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@+id/lungs_img"
            app:layout_constraintTop_toTopOf="@+id/btn_ok">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/urbanist_semibold"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:text="Retry Now"
                android:gravity="center"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="@+id/lungs_img"
                app:layout_constraintTop_toBottomOf="@+id/title_text" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>