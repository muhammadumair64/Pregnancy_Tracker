<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/robotic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/copyText"
        android:padding="@dimen/_2sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/copy_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/shareText"
        android:layout_width="@dimen/_20sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/share_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyText" />

    <TextView
        android:padding="@dimen/_10sdp"
        android:background="@drawable/response_bg"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="0dp"
        android:id="@+id/receiversMsg"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/urbanist_medium"
        android:text="material_motion_easing_deceleratedmaterial_motion_easing_deceleratedmaterial_motion_easing_deceleratedmaterial_motion_easing_decelerated"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/copyText"
        app:layout_constraintStart_toEndOf="@+id/imageView25"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>